        background-color: transparent !important;
        -webkit-appearance: none;
        -moz-appearance: none;
        text-indent: 1px;
        text-overflow: '';
        cursor: default !important;
        -webkit-box-shadow: none !important;
        -moz-box-shadow: none !important;
        box-shadow: none !important;
    }

        .form-control select::-ms-expand {
            display: none;
        }
</style>


@section scripts {

    <script>

