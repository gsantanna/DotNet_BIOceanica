                @if (Model.Familiares.Count > 0)
                {

                    <table class="table table-hover remove-background borderless table-borderless">
                        <tbody>
                            @foreach (var familiar in Model.Familiares)
                            {
                                <tr>
                                    <td class="text-left size-sm">@familiar.Nome</td>
                                    <td class="text-left size-sm">@familiar.ParentescoDesc</td>
                                </tr>

