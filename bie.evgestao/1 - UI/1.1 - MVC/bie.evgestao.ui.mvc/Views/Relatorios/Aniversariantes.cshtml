@model IEnumerable<bie.evgestao.ui.viewmodels.PessoaViewmodel>
@{
    ViewBag.Title = "Aniversariantes";
    ViewBag.HeaderText = ViewBag.Title;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-title">
    <h2>Aniversariantes</h2><p>
        Aniversariantes por mês
    </p>
</div>





@for (int i = 1; i <= 12; i++)
{
    <div class="col-md-1">
        <a class="btn btn-info" style="width:100%;text-transform: capitalize;" href='@Url.Action("Aniversariantes","Relatorios", new { mes=i })'>
            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
        </a>
    </div>

}
</ul>







<table class="table table-hover">

    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Data Nascimento</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@Html.Raw(item.Tels)</td>
            <td>@item.DataNascimento.Value.ToShortDateString()</td>
        </tr>
    }

</table>

